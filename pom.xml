            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <carbon.automation.version>4.3.1</carbon.automation.version>
        <carbon.automationutils.version>4.3.0</carbon.automationutils.version>
        <project.scm.id>my-scm-server</project.scm.id>
